{
  "extends": "@labforward/config/tsconfig.json",
  "compilerOptions": {
    "baseUrl": "./src",
    "declaration": true,
    "emitDeclarationOnly": true,
    "esModuleInterop": true,
    "module": "es2015",
    "moduleResolution": "node",
    "outDir": "dist",
    "paths": {
      "~/*": ["*"],
      "laboperator-middleware/*": [
        "../node_modules/laboperator-middleware/dist/*"
      ]
    },
    "target": "es5"
  },
  "include": ["src"],
  "exclude": ["src/templates"]
}
